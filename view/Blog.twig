{% extends "template.twig" %}

{% block style %}
    <link rel="stylesheet" href="/public/css/blog.css">
{% endblock %}

{% block content %}

    <div class="hero">
        <div class="hero__title">
            <i class="far fa-bookmark"></i>
            <h1>Blogs</h1>
        </div>
        <hr>
        <div id="posts">
            {% for post in posts %}
                <div class="post__card">
                    {% apply markdown_to_html %}
                        <a href="{{ route("Blog",[post.id])}}">{{ post.title }}</a>
                    <hr>
                        {{ post.description }}
                    {% endapply %}
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}