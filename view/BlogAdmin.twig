{% extends "template.twig" %}

{% block style %}
    <link rel="stylesheet" href="/public/css/blog.css">
{% endblock %}

{% block content %}

    <div class="hero">
        <div class="hero__title">
            <i class="far fa-bookmark"></i>
            <h1>Blogs</h1>
        </div>
        <hr>
        <div id="posts">
            {% for post in posts %}
                <div class="post__card">
                    <div>
                        <h3><a href="{{ route("AdminBlog",[post.id]) }}">{{ post.title }}</a></h3>
                    </div>
                    <hr>
                    <p>{{ post.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}