{% extends "template.twig" %}

{% block style %}
    <link rel="stylesheet" href="/public/css/blog.css">
{% endblock %}

{% block content %}

    {% include "Error.twig" %}

    <div class="hero">
        <div class="hero__title">
            <i class="far fa-bookmark"></i>
            <h1>Manage</h1>
        </div>
        <hr>
        <p><i class="fas fa-plus-circle"></i> <a href="{{ route("CreatePost") }}">Add</a></p>
    </div>

    <div class="hero">
        <div class="hero__title">
            <i class="far fa-bookmark"></i>
            <h1>Blogs</h1>
        </div>
        <hr>
        <div id="posts">
            {% for post in posts %}
                <div class="post__card" onclick="window.location.href = '{{ route("AdminBlog",[post.id]) }}'">
                    <h2>{{ post.title }}</h2>
                    <hr>
                    {% apply markdown_to_html %}
                        {{ post.description }}
                    {% endapply %}
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}